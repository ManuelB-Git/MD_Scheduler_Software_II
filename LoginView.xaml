<Window
    x:Class="MD_Scheduler_Software_II.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MD_Scheduler_Software_II"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="MD Scheduler Login"
    Width="300"
    Height="450"
    ui:TitleBar.Height="36"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


            <Label
                Grid.Row="0"
                Margin="20,20,0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Login"
                FontWeight="Bold" />



        <Border
            Grid.Row="1"
            Margin="10"
            Padding="10"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="20,0,20,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Username"
                    FontWeight="Bold" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="20,0,20,20" />

                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="20,20,20,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Password"
                    FontWeight="Bold" />
                <PasswordBox
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="20,0,20,20" />

                <Button
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="20,20,20,5"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Content="Forgot password?"
                    FontSize="10" />

                <Button
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="20,20,20,5"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Content="Create User"
                    FontSize="10" />

                <Button
                    
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="20,0,20,20"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Content="Login" />
            </Grid>
        </Border>
    </Grid>
</Window>
