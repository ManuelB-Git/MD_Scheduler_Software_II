<UserControl
    x:Class="MD_Scheduler_Software_II.Views.CustomersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MD_Scheduler_Software_II.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!--  Form Section  -->
        <StackPanel
            Grid.Column="0"
            Margin="10"
            VerticalAlignment="Top">
            <TextBlock Text="Customer Name" />
            <TextBox x:Name="CustomerNameTextBox" Margin="0,5,0,10" />

            <TextBlock Text="Address" />
            <TextBox x:Name="CustomerAddressTextBox" Margin="0,5,0,10" />

            <TextBlock Text="City" />
            <TextBox x:Name="CustomerCityTextBox" Margin="0,5,0,10" />

            <TextBlock Text="State" />
            <TextBox x:Name="CustomerStateTextBox" Margin="0,5,0,10" />

            <TextBlock Text="Postal Code" />
            <TextBox x:Name="CustomerPostalCodeTextBox" Margin="0,5,0,10" />

            <TextBlock Text="Phone Number" />
            <TextBox x:Name="PhoneNumberTextBox" Margin="0,5,0,20" />

            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <Button
                    x:Name="SaveButton"
                    Width="75"
                    Margin="5"
                    Content="Save" />
                <Button
                    x:Name="UpdateButton"
                    Width="75"
                    Margin="5"
                    Content="Update" />
                <Button
                    x:Name="ClearButton"
                    Width="75"
                    Margin="5"
                    Content="Clear" />
            </StackPanel>
        </StackPanel>

        <!--  DataGrid Section  -->
        <DataGrid
            x:Name="CustomerDataGrid"
            Grid.Column="1"
            Margin="10"
            AutoGenerateColumns="False"
            IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding CustomerId}"
                    Header="ID" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CustomerName}"
                    Header="Name" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CustomerAddress}"
                    Header="Address" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding CustomerCity}"
                    Header="City" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding CustomerState}"
                    Header="State" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding CustomerPostalCode}"
                    Header="Postal Code" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding PhoneNumber}"
                    Header="Phone" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
