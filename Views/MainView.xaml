<Window
    x:Class="MD_Scheduler_Software_II.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MD_Scheduler_Software_II.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:MD_Scheduler_Software_II.ViewModels"
    Title="MD Scheduler"
    MinWidth="800"
    MinHeight="600"
    ui:TitleBar.Height="36"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>


    <DockPanel>

        <!--  Top Nav Bar  -->
        <DockPanel Background="Black" DockPanel.Dock="Top">
            <!--  App Title  -->
            <TextBlock
                Margin="10"
                VerticalAlignment="Center"
                DockPanel.Dock="Left"
                FontSize="24"
                FontWeight="Bold"
                Foreground="White"
                Text="{Binding Title}" />

            <!--  Menu Bar  -->
            <Menu
                HorizontalAlignment="Right"
                Background="Black"
                DockPanel.Dock="Right">
                <MenuItem
                    Command="{Binding ShowHomeViewCommand}"
                    Foreground="White"
                    Header="Home" />
                <MenuItem
                    Command="{Binding ShowCustomerViewCommand}"
                    Foreground="White"
                    Header="Customers" />
                <MenuItem
                    Command="{Binding ShowAppointmentViewCommand}"
                    Foreground="White"
                    Header="Appointments" />
                <MenuItem
                    Command="{Binding ShowReportViewCommand}"
                    Foreground="White"
                    Header="Reports" />
            </Menu>
        </DockPanel>

        <!--  Content Area  -->
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>
